{
    "version": 2,
    "builds": [
        {
            "src": "/backend",
            "use": "@vercel/node"
        },
        {
            "src": "/frontend",
            "use": "@now/static"
        }
    ],
    "routes": [
        {
            "src": "/[^.]+",
            "dest": "/"
        }
    ],
    "rewrites": [
        {
            "source": "/((?!api/.*).*)",
            "destination": "/index.html"
        }
    ]
}